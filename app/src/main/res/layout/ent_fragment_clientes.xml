<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui_entrenador.clientes.ClientesFragment"
    android:background="@color/blue_200">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCliente"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSinClientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/custom_edittext"
        android:padding="4dp"
        android:text="@string/msgRecyclerClientes"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/rvCliente"
        app:layout_constraintStart_toStartOf="@+id/rvCliente"
        app:layout_constraintTop_toTopOf="@+id/rvCliente" />
</androidx.constraintlayout.widget.ConstraintLayout>