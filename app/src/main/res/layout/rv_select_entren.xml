<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_itemhome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="0dp"
    android:padding="0dp"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/idEntreno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight="1"
            android:textColor="@color/azul_marino"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvNombreEnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full body"
            android:layout_weight="1"
            android:textColor="@color/azul_marino"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvtipoEnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fuerza"
                android:textSize="14dp"
                android:textStyle="bold"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/tvseriesrep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:textSize="14dp"
                android:text="5 ejercicios - 5x10 RM" />

        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>