<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_itemhome"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="10dp"
    android:padding="15dp"
    app:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginHorizontal="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/imageEntren"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/icon_ejerc_black" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/idEntreno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/azul_marino"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvNombreDep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Juan de Dios Cuesta"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textColor="@color/azul_marino"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tvNombreEntre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full body - Fuerza"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16dp"
                android:textStyle="bold"
                android:paddingEnd="10dp"/>
            <TextView
                android:id="@+id/tvseriesrep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:text="5 ejercicios - 5x10 RM" />


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:cardCornerRadius="15dp"
            android:layout_gravity="center_vertical"
            app:cardElevation="0dp"
            android:layout_marginHorizontal="10dp">

            <ImageView
                android:id="@+id/imagenRealizado"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_baseline_check_circle_24" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>