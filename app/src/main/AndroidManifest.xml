<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.juandecuesta.t_fitprogress">

    <!--Permissions for internet-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/t_fit"
        android:label="@string/app_name"
        android:roundIcon="@drawable/t_fit"
        android:supportsRtl="true"
        android:theme="@style/Theme.TFitProgress">
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register_name"
            android:exported="false"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan"
            android:parentActivityName=".LoginActivity"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:theme="@style/Theme.TFitProgress.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui_entrenador.MainActivity"
            android:exported="true"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name"
            android:theme="@style/Theme.TFitProgress.NoActionBar"/>
    </application>

</manifest>